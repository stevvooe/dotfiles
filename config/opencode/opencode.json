{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "snapshot": false,
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "oauth": {}
    },
    "github": {
      "type": "local",
      "command": ["sh", "-c", "GITHUB_PERSONAL_ACCESS_TOKEN=$(gh auth token) exec github-mcp-server --read-only --toolsets repos,issues,pull_requests,actions stdio"]
    }
  },
  "permission": {
    "*": "ask",
    "read": "allow",
    "glob": "allow",
    "grep": "allow",
    "github_search_*": "allow",
    "github_list_*": "allow",
    "github_get_*": "allow",
    "github_pull_request_read": "allow",
    "github_issue_read": "allow",
    "github_actions_*": "allow",
    "skill": {
      "*": "ask",
      "opencode-config": "allow",
      "dotfiles-stow": "allow",
      "brewfile-maintenance": "allow",
      "shell-config": "allow",
      "nvim-config": "allow",
      "design-doc-workflow": "allow",
      "github-pr-template": "allow"
    },
    "bash": {
      "git *": "ask",
      "git status": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git show*": "allow",
      "git ls-files*": "allow",
      "ls *": "allow",
      "grep *": "allow",
      "rg *": "allow"
    }
  }
}
